<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.addIncident"
    android:background="#f9e5e6">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="105dp"
        android:text="Motif"
        android:textColor="#cc0007"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/motif"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="-1dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="190dp"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#cc0007"/>

    <EditText
        android:id="@+id/desc"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/motif"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-12dp"
        android:ems="10"
        android:hint="une brÃ¨ve description de l'incident"
        android:inputType="text|textMultiLine"/>

    <ImageButton
        android:id="@+id/BtnAdd"
        android:layout_width="142dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="156dp"
        android:src="@drawable/ajouterincident"
        android:text="Ajouter" />
</RelativeLayout>