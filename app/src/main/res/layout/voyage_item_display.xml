<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <ImageButton
        android:id="@+id/maps"
        android:layout_width="80dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="0dp"
        android:text="Date/heure :"
        android:textColor="#0007cc"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="Point de départ :"
        android:textColor="#0007cc"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:text="Chauffeur :"
        android:textColor="#0007cc"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-1dp"
        android:text="Bus :"
        android:textColor="#0007cc"/>



    <TextView
        android:id="@+id/debIncident"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="TextView" />

    <TextView
        android:id="@+id/pointDepart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/debIncident"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/debIncident"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="0dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/debIncident"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/startTravel"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:layout_below="@+id/maps"
        android:layout_alignStart="@+id/incident"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/startf"
        android:text="Commencer" />

    <ImageButton
        android:id="@+id/endTravel"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:layout_below="@+id/maps"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:src="@drawable/endf"
        android:text="Terminer" />

    <ImageButton
        android:id="@+id/incident"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/incidentf"
        android:text=">>> Gérer les incidents" />

    <TextView
        android:id="@+id/etat"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="96dp"
        android:textSize="50px" />
</RelativeLayout>